<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StandingPomodoro.app.Controller.ConfigurationPomodoro">
   <HBox alignment="CENTER" spacing="20" prefWidth="600">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Pomodoro Settings"/>
   </HBox>
   <VBox alignment="CENTER" prefWidth="600"  prefHeight="400" spacing="30">
      <HBox alignment="BOTTOM_CENTER">
         <VBox alignment="CENTER" spacing="5">
            <HBox alignment="CENTER" prefWidth="400" spacing="10">
               <HBox alignment="CENTER_RIGHT" prefWidth="100">
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="concentration time" />
               </HBox>
               <TextField fx:id="inputConcentrationTime" layoutX="215.0" layoutY="75.0" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
               <HBox alignment="CENTER_RIGHT" prefWidth="100">
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="short break" />
               </HBox>
               <TextField fx:id="inputShortBreak" layoutX="215.0" layoutY="75.0" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
               <HBox alignment="CENTER_RIGHT" prefWidth="100">
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="long break" />
               </HBox>
               <TextField fx:id="inputLongBreak" layoutX="215.0" layoutY="75.0" />
            </HBox>
         </VBox>
         <VBox>
         </VBox>
      </HBox>
      <HBox alignment="CENTER" spacing="10">
         <Button fx:id="btnBack" onAction="#backToStartpage" text="back"/>
         <ComboBox fx:id="comboBox"/>
         <Button fx:id="btnSave" onAction="#savePomodoroConfig" text="save" />
         <Button fx:id="btnDelete" onAction="#deletePomodoroConfig" text="delete" />
      </HBox>
   </VBox>

</AnchorPane>
