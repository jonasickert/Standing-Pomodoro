<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="StandingPomodoro.app.Controller.ConfigurationStanding" prefHeight="400.0" prefWidth="600.0">
    <HBox alignment="CENTER" spacing="20" prefWidth="600">
        <VBox spacing="20">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Settings for your standing desk"/>
        </VBox>
    </HBox>
    <VBox alignment="CENTER" prefWidth="600"  prefHeight="400" spacing="30">
        <HBox alignment="BOTTOM_CENTER">
            <VBox alignment="CENTER" spacing="5">
                <HBox alignment="CENTER" prefWidth="400" spacing="10">
                    <HBox alignment="CENTER_RIGHT" prefWidth="70">
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="seating time" />
                    </HBox>
                    <TextField fx:id="inputSeatingTime" />
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <HBox alignment="CENTER_RIGHT" prefWidth="70">
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="standing time" />
                    </HBox>
                    <TextField fx:id="inputStandingTime"  />
                </HBox>
            </VBox>
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="btnBack" onAction="#goBackToStartpage" text="back" />
            <Button fx:id="btnTakeConfiguration" onAction="#takeConfiguration" text="take configuration" />
        </HBox>
    </VBox>

</AnchorPane>
